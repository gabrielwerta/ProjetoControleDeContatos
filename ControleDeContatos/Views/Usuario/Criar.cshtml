@using ControleDeContatos.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Cadastrar usuário";
}

<div class = "text-center">


    <h1 class = "display-4">Cadastrar usuário</h1>

</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">
  <div class="mb-3">
    <label for="nome" class="form-label">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário"/>
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário"/>
        @Html.ValidationMessageFor(x => x.Email)
  </div>

 <div class="mb-3">
    <label for="login" class="form-label">Login</label>
    <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do contato"/>
        @Html.ValidationMessageFor(x => x.Login)
  </div>

  <div class="mb-3">
    <label for="perfil" class="form-label">Perfil</label>
    <select class="form-control" asp-for="Perfil">
        <option value="">Selecione</option>
        <option value="@PerfilEnum.Admin">Administrador</option>
        <option value="@PerfilEnum.Padrao">Padrão</option>
    </select>
        @Html.ValidationMessageFor(x => x.Perfil)
  </div>

  <div class="mb-3">
    <label for="senha" class="form-label">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do contato"/>
        @Html.ValidationMessageFor(x => x.Senha);
  </div>

  <button type="submit" class="btn btn-primary">Cadastrar</button>
  <a class="btn btn-secundary" role="button" asp-controller="Usuario" asp-action="Index">Voltar</a>

</form>
